package ar.edu.unlp.info.oo1.Ejercicio3_Presupuesto;


import static org.junit.jupiter.api.Assertions.assertEquals;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;


public class PresupuestoTest {

	private Presupuesto presupuesto;

	@BeforeEach
	public void setUp() {
		presupuesto = new Presupuesto().cliente("Pedro");
	}

	@Test
	public void testCalcularTotal() {
		assertEquals(0, presupuesto.calcularTotal());
		Item item = new Item();
		item("Leche")
				costoUnitario(100)
		item.getCantidad(1);
		presupuesto.agregarItem(item);
		assertEquals(100, presupuesto.calcularTotal());
		item = new Item();
		item.setDetalle("Chocolate");
		item.costoUnitario(150);
		item.cantidad(1);
		presupuesto.agregarItem(item);

		assertEquals(250, presupuesto.calcularTotal());
	}

	@Test
	public void testInitialize() {
		assertEquals(0, presupuesto.calcularTotal());
	}

}
